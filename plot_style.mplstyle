# Figure and axes settings
figure.figsize: 6, 4
axes.labelsize: 14
axes.titlesize: 16
xtick.labelsize: 12
ytick.labelsize: 12
legend.fontsize: 12

# Line and grid settings
lines.linewidth: 2
axes.grid: True
grid.linestyle: --
grid.alpha: 0.7

# Font settings
font.family: serif
font.size: 12

# Savefig settings for high-quality figures
savefig.dpi: 300
savefig.format: png
